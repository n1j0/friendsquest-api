{
  "name": "friendsquest-api",
  "version": "0.0.1",
  "description": "API for FriendsQuest-APP",
  "main": "./.out/index.js",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--loader ts-node/esm\" nodemon --ext ts --experimental-specifier-resolution node ./src",
    "start": "tsc && NODE_OPTIONS=\"--loader ts-node/esm\" NODE_ENV=production node ./.out/index.js",
    "lint": "eslint --ext .js,.cjs,.mjs,.ts --color --cache --cache-location temp/.eslintcache --ignore-path ../.gitignore .",
    "lintfix": "npm run lint -- --fix",
    "typecheck": "tsc",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "jest --watchAll",
    "test:ci": "node --expose-gc node_modules/.bin/jest --ci --reporters=default --coverage --logHeapUsage --maxWorkers=50%",
    "migrate:create": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:create",
    "migrate:up": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:up",
    "migrate:down": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:down",
    "migrate:fresh": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:fresh",
    "seeder:create": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm seeder:create",
    "seeder:run": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm seeder:run",
    "orm:restart": "NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:fresh --seed",
    "prepare": "husky install"
  },
  "type": "module",
  "engines": {
    "node": "^16.17.x",
    "npm": "^8.x.x"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.4.2",
    "@mikro-orm/migrations": "^5.4.2",
    "@mikro-orm/postgresql": "^5.4.2",
    "@mikro-orm/reflection": "^5.4.2",
    "@mikro-orm/seeder": "^5.4.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-actuator": "^1.8.2",
    "firebase-admin": "^11.0.1",
    "helmet": "^6.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.2.10",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-actuator": "^1.8.0",
    "@types/jest": "^29.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.18",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./.out/config/mikro-orm.config.js"
    ]
  }
}
