{
  "name": "friendsquest-api",
  "version": "2.2.0",
  "description": "API for FriendsQuest-APP",
  "main": "./.out/src/index.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" nodemon --ext ts --experimental-specifier-resolution node ./src",
    "clean": "rimraf .out/",
    "copy": "copyfiles -u 1 src/**/*.cjs src/**/*.ejs .out/src",
    "start": "npm run clean && npm run copy && tsc && NODE_OPTIONS=\"--loader ts-node/esm\" NODE_ENV=production node ./.out/src/index.js",
    "lint": "eslint --ext .js,.cjs,.mjs,.ts --color --cache --cache-location temp/.eslintcache --ignore-path ./.gitignore .",
    "lintfix": "npm run lint -- --fix",
    "typecheck": "tsc",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "node --expose-gc node_modules/.bin/jest --ci --reporters=default --coverage --logHeapUsage --maxWorkers=50%",
    "migrate:create": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:create",
    "migrate:up": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:up",
    "migrate:down": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:down",
    "migrate:fresh": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:fresh",
    "seeder:create": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm seeder:create",
    "seeder:run": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm seeder:run",
    "orm:restart": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mikro-orm migration:fresh --seed",
    "prepare": "husky install"
  },
  "type": "module",
  "engines": {
    "node": "^16.17.x",
    "npm": "^8.x.x"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.5.3",
    "@mikro-orm/migrations": "^5.5.3",
    "@mikro-orm/postgresql": "^5.5.3",
    "@mikro-orm/reflection": "^5.5.3",
    "@mikro-orm/seeder": "^5.5.3",
    "@sentry/node": "^7.23.0",
    "@sentry/tracing": "^7.23.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-actuator": "^1.8.2",
    "firebase-admin": "^11.2.1",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.0",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.5.3",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/express-actuator": "^1.8.0",
    "@types/jest": "^29.2.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./.out/src/config/mikro-orm.config.js"
    ]
  }
}
